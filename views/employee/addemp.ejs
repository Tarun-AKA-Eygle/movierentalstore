<%- include("../partials/header") %>
<div class="pureent hamdash1 fillin-val">
    <div class="header-small">

        <div class="items">
            <h1 class="subhead"> Employee Details</h1>
            

            <form action="/employee/add" method="post" novalidate autocomplete="off" class="form form-stacked">
                <fieldset>
                    <br>
                    <!-- (SINE IN EMPLOYEES.SIN % TYPE,NAMEE IN EMPLOYEES.ENAME%TYPE,ADDR IN EMPLOYEES.ADDRESS%TYPE,BIR IN EMPLOYEES.DOB%TYPE,JOI IN EMPLOYEES.DOJ%TYPE,SID IN EMPLOYEES.STORE_ID%TYPE,SAL IN EMPLOYEES.SALARY%TYPE,EML IN EMPLOYEES.EMAIL%TYPE,PAS IN EMPLOYEES.PASSWORD%TYPE,PH1 IN EM_PHONE.PH%TYPE) -->
                    <label for="EmployeeName">Employee Name </label>
                    <input id="EmployeeName" type="text" placeholder="Employee Name" class="pure-input-1" name="name"  >
                    <br>
                    <label for="sin">SIN </label>
                    <input id="sin" type="number" placeholder="SIN" class="pure-input-1" name="sin" >
                    <br>
                    <label for="empphno">Phone Number</label>
                    <input id="empphno" type="number" placeholder="Phone Number" class="pure-input-1" name="ph" >
                    <br>
                    <label for="empaddress">Employee Address</label>
                    <input id="empaddress" type="text" placeholder="Employee Address" class="pure-input-1" name="address" >
                    <br>
                    <label for="Hre Date">Hire Date (YYYY-MM-DD)</label>
                    <input id="hireDate" type="date" placeholder="Hire Date" class="pure-input-1" name="doj"  >
                    <br>
                    <label for="brt Date">Birth Date (YYYY-MM-DD)</label>
                    <input id="birthDate" type="date" placeholder="Birth Date" class="pure-input-1" name="dob"  >
                    <br>
                    <label for="storeno">Store Number</label>
                    <input id="storeno" type="number" placeholder="Store Number" class="pure-input-1" name="stid" >
                    <br>
                    <label for="salary">Salary</label>
                    <input id="salary" type="number" placeholder="Salary" class="pure-input-1" name="sal" >
                    <br>
                    <label for="email">Email</label>
                    <input id="email" type="email" placeholder="Enter Email" class="pure-input-1" name="email" >
                    <br>
                    <label for="pass">Password</label>
                    <input id="pass" type="password" placeholder="Password" class="pure-input-1" name="password" >
                    <br>
                    <label for="pass">Re-enter the Password</label>
                    <input id="pass" type="password" placeholder="Password" class="pure-input-1" name="password2" >
                    <br>
                    
                    <br><br>
                    <input type="hidden" name="id" value="1">
                    <button type="submit" class="btn button-success">Submit</button>
                </fieldset>
            </form>
        </div>

    </div>
</div>
</div>
</body>
</html>